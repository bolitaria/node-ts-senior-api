{
  "name": "node-ts-senior-api",
  "version": "1.0.0",
  "description": "Senior Node.js + TypeScript API with PostgreSQL, Redis, ClickHouse",
  "scripts": {
    "dev": "nodemon src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest tests/integration --forceExit",
    "test:e2e": "jest tests/e2e --forceExit",
    "db:migrate": "knex migrate:latest",
    "db:seed": "knex seed:run",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "express": "^4.18.2",
    "typescript": "^5.0.0",
    "pg": "^8.11.0",
    "redis": "^4.6.0",
    "@clickhouse/client": "^0.0.0",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.0",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "joi": "^17.9.0",
    "bullmq": "^4.0.0",
    "apollo-server-express": "^3.12.0",
    "graphql": "^16.6.0",
    "swagger-ui-express": "^4.6.0",
    "swagger-jsdoc": "^6.2.0",
    "prom-client": "^14.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.10.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/bcryptjs": "^2.4.0",
    "@types/cors": "^2.8.13",
    "@types/jest": "^29.5.0",
    "@types/supertest": "^2.0.12",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "supertest": "^6.3.0",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0"
  }
}